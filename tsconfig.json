{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./application",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@root/*": ["src/*"],
			"@controllers/*": ["src/controllers/*"],
			"@routes/*": ["src/routes/*"],
			"@errors/*": ["src/errors/*"],
			"@types/*": ["src/types/*"],
			"@validation/*": ["src/validation/*"]
		}
	},
	"include": ["./src","Application.ts"]
}